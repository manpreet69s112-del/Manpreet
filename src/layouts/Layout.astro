---
const { title = "Govt Schemes" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: #f4f4f4;
      }
      header {
        background: #2563eb;
        color: white;
        padding: 1rem;
        text-align: center;
      }
      main {
        padding: 1rem;
      }
      a {
        color: #2563eb;
        text-decoration: none;
      }
      .card {
        background: white;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 8px;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{title}</h1>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>